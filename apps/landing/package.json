{
  "name": "landing",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "craco start",
    "build": "craco build",
    "postbuild": "react-snap && cp -R ../docs/build build/docs",
    "test": "craco test",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@tailus/themer": "^0.0.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4",
    "@repo/docs": "workspace:*"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@repo/eslint-config/react-app.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@craco/types": "^7.1.0",
    "@jest/globals": "29.7.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@testing-library/jest-dom": "^5.17.0",
    "@types/node": "^16.18.96",
    "autoprefixer": "^10.4.19",
    "daisyui": "^4.10.2",
    "eslint-config-react-app": "^7.0.1",
    "jest-transform-stub": "^2.0.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "react-snap": "^1.23.0",
    "tailwindcss": "^3.4.3",
    "ts-jest": "^29.1.2"
  },
  "reactSnap": {
    "source": "build",
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--single-process"
    ]
  }
}
